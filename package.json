{
  "name": "group-electron",
  "version": "1.0.0",
  "description": "集团版安装程序",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "dist-x86": "electron-builder --win --ia32",
    "dist-x64": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "上海梵讯网络技术有限公司",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron-squirrel-startup": "^1.0.0",
    "regedit": "^3.0.3"
  },
  "build": {
    "appId": "集团版安装程序",
    "productName": "集团版安装程序",
    "copyright": "上海梵讯网络技术有限公司",
    "asar": true,
    "win": {
      "icon": "./assets/IMG_4632.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./assets/IMG_4632.ico",
      "uninstallerIcon": "./assets/IMG_4632.ico",
      "installerHeaderIcon": "./assets/IMG_4632.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
